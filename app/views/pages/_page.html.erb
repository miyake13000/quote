<%= turbo_frame_tag page do %>
  <li class="flex items-center justify-between p-2 bg-white hover:bg-gray-50 border-b border-gray-100">
    <!-- ページ名リンク -->
    <%= link_to page.name, posts_url(page_id: page.id),
        data: { turbo_frame: "_top" },
        class: "flex-1 text-gray-800 hover:text-blue-600 font-medium" %>

    <!-- 削除ボタン（管理者のみ） -->
    <% if admin_signed_in? %>
      <%= button_to page, method: :delete,
          form: { data: { turbo_confirm: "削除しますか？" } },
          class: "ml-3 p-1.5 text-red-500 hover:text-red-700 hover:bg-red-50 rounded",
          title: "削除" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
        </svg>
      <% end %>
    <% end %>
  </li>
<% end %>
