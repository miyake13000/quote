<%= turbo_frame_tag post do %>
  <div class="bg-white mb-1 rounded-lg shadow-md border border-gray-200 p-4 hover:shadow-md transition-shadow">

    <!-- Header -->
    <div class="flex items-center justify-between mb-3">

      <!-- Left side -->
      <div class="flex items-center gap-3">
        <div class="font-semibold text-gray-900">
          <%= post.reporter %>
        </div>
        <div class="text-sm text-gray-500">
          <%= l post.created_at, format: :date %>
        </div>
      </div>

      <!-- Right side -->
      <% if admin_signed_in? %>
        <div class="flex items-center gap-2">
          <%= button_to "編集", edit_post_path(post), method: :get,
              class: "px-3 py-1.5 text-sm font-medium text-blue-600 hover:text-blue-700 hover:bg-blue-50 rounded transition-colors" %>
          <%= button_to "削除", post, method: :delete,
              form: { data: { turbo_confirm: "削除しますか？" } },
              class: "px-3 py-1.5 text-sm font-medium text-red-600 hover:text-red-700 hover:bg-red-50 rounded transition-colors" %>
        </div>
      <% end %>

    </div>

    <!-- Content -->
    <div class="rich-text-content leading-relaxed">
      <%= post.content %>
    </div>

  </div>
<% end %>
