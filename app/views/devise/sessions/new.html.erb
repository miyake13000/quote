<div class="min-h-screen flex justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">

    <!-- ヘッダー -->
    <div>
      <h2 class="text-center text-3xl font-bold text-gray-900">
        管理者ログイン
      </h2>
      <p class="mt-2 text-center text-sm text-gray-600">
        編集/削除，新ページ作成にはログインが必要です
      </p>
    </div>

    <!-- ログインフォーム -->
    <div class="p-8">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>

        <!-- ユーザー名フィールド -->
        <div>
          <%= f.label :username, "ユーザー名", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.text_field :username,
              autofocus: true,
              autocomplete: "username",
              class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors",
              placeholder: "ユーザー名を入力" %>
        </div>

        <!-- パスワードフィールド -->
        <div>
          <%= f.label :password, "パスワード", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.password_field :password,
              autocomplete: "current-password",
              class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors",
              placeholder: "パスワードを入力" %>
        </div>

        <!-- ログイン状態を記憶するチェックボックス -->
        <% if devise_mapping.rememberable? %>
          <div class="flex items-center">
            <%= f.check_box :remember_me, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded cursor-pointer" %>
            <%= f.label :remember_me, "ログイン状態を記憶する", class: "ml-2 block text-sm text-gray-700 cursor-pointer" %>
          </div>
        <% end %>

        <!-- ログインボタン -->
        <div>
          <%= f.submit "ログイン",
              class: "w-full flex justify-center py-2.5 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors cursor-pointer" %>
        </div>
      <% end %>
    </div>

  </div>
</div>
